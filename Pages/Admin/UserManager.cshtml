        function getDifficultyColor(difficulty, alpha = 1) {
            let colorBase;
            switch (difficulty.toLowerCase()) {
                case 'easy':
                    colorBase = '75, 192, 192'; // Teal
                    break;
                case 'medium':
                    colorBase = '255, 159, 64'; // Orange
                    break;
                case 'hard':
                    colorBase = '255, 99, 132'; // Red
                    break;
                default:
                    colorBase = '201, 203, 207'; // Gray
                    break;
            }
            return `rgba(${colorBase}, ${alpha})`;
        }

        async function toggleUserStatus(buttonElement) {
            const userId = buttonElement.getAttribute('data-user-id');
            const accountName = buttonElement.getAttribute('data-user-account');
            const currentStatus = buttonElement.getAttribute('data-current-status') === 'True'; // Chuyển đổi từ string "True"/"False" sang boolean

            const actionText = currentStatus ? "khóa" : "mở khóa";
            const newStatusText = currentStatus ? "Bị khóa" : "Hoạt động";
            const newStatusClass = currentStatus ? "bg-red-100 text-red-800" : "bg-green-100 text-green-800";
            
            if (!confirm(`Bạn có chắc chắn muốn ${actionText} tài khoản ${accountName} không?`)) {
                return;
            }

            try {
                buttonElement.disabled = true;
                buttonElement.textContent = 'Đang xử lý...';
                
                const response = await fetch(`/api/user/${userId}/toggle-status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    const tableRow = buttonElement.closest('tr');
                    console.log("tableRow",tableRow);
                    const statusCell = tableRow.querySelector('td:nth-child(4) span');
                    console.log("statusCell",statusCell);
                    statusCell.className = `inline-flex items-center px-3 py-0.5 rounded-full text-xs font-semibold ${newStatusClass}`;
                    statusCell.textContent = newStatusText;

                    buttonElement.textContent = currentStatus ? "Mở khóa" : "Khóa";
                    buttonElement.setAttribute('data-current-status', (!currentStatus).toString());
                    buttonElement.className = `toggle-status-btn font-medium ${!currentStatus ? "text-red-600 hover:text-red-900" : "text-green-600 hover:text-green-900"}`;
                    
                    alert('Cập nhật trạng thái thành công');

                } else {
                    alert('Lỗi: ' + (result.Message || 'Có lỗi xảy ra khi cập nhật trạng thái.'));
                }
            } catch (error) {
                console.error('Lỗi khi gọi API:', error);
                alert('Lỗi kết nối: Không thể kết nối đến máy chủ.');
            } finally {
                buttonElement.disabled = false;
                if (buttonElement.textContent === 'Đang xử lý...') {
                    buttonElement.textContent = currentStatus ? "Khóa" : "Mở khóa";
                    buttonElement.className = `toggle-status-btn font-medium ${currentStatus ? "text-red-600 hover:text-red-900" : "text-green-600 hover:text-green-900"}`;
                }
            }
        }
    </script>
