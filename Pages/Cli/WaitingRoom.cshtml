    }

    // H√†m chuy·ªÉn ƒë·ªïi gi√° tr·ªã ƒë·ªô kh√≥ sang int
    function getDifficultyInt(value) {
        console.log(value)
        switch (value) {
            case 'easy': return 1;
            case 'medium': return 2;
            case 'hard': return 3;
            default: return 0;
        }
    }
    
    // H√†m c·∫≠p nh·∫≠t m√†u cho hi·ªÉn th·ªã ƒë·ªô kh√≥
    function getDifficultyColorClass(value) {
