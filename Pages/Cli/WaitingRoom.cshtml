                    : '';

                let kickButton = '';
                if (isHost && !isMe) { // Ch·ªâ hi·ªÉn th·ªã n√∫t Kick n·∫øu l√† Host V√Ä kh√¥ng ph·∫£i l√† ch√≠nh m√¨nh
                    kickButton = `
