@page "/"
@model knapsack_app.Pages.Cli.LoginModel
@{
    // Sử dụng Layout đã định nghĩa
    Layout = "_Cli_Layout";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<link rel="stylesheet" href="~/css/cli_home.css" asp-append-version="true" />

<body class="bg-white text-gray-800 pt-16">
    <section class="relative h-[70vh] min-h-[400px]">
        <div class="swiper mySwiper w-full h-full absolute top-0 left-0">
            <div class="swiper-wrapper">

                <div class="swiper-slide flex items-center justify-center"
                    style="background-image: url('/imgs/museum1-bg.jpg'); background-size: cover; background-position: center;">
                    <div class="slide-overlay"></div>
                    <div class="flex flex-col items-center justify-center h-full w-full p-4">
                        <div
                            class="text-center p-6 sm:p-8 bg-black/50 rounded-xl shadow-2xl max-w-4xl w-full mx-auto backdrop-blur-sm text-white">
                            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight mb-2"
                                style="text-shadow: 0 4px 6px rgba(0,0,0,0.8);">
                                KNAPSACK 0/1
                            </h1>
                            <p class="text-lg sm:text-xl lg:text-2xl mt-2 tracking-widest font-light"
                                style="text-shadow: 0 2px 4px rgba(0,0,0,0.8);">
                                Tối Ưu Hóa Giá Trị Trong Giới Hạn Trọng Lượng
                            </p>
                            <a href="#"
                                class="mt-8 inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition duration-300 transform hover:scale-105 shadow-xl uppercase tracking-wider">
                                Start Game
                            </a>
                        </div>
                    </div>
                </div>

                <div class="swiper-slide flex items-center justify-center"
                    style="background-image: url('/imgs/police-station-bg.jpg'); background-size: cover; background-position: center;">
                    <div class="slide-overlay"></div>
                    <div class="flex flex-col items-center justify-center h-full w-full p-4">
                        <div
                            class="text-center p-6 sm:p-8 bg-black/50 rounded-xl shadow-2xl max-w-4xl w-full mx-auto backdrop-blur-sm text-white">
                            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight mb-2"
                                style="text-shadow: 0 4px 6px rgba(0,0,0,0.8);">
                                TÚI ĐỒ VÀ MÓN HÀNG
                            </h1>
                            <p class="text-lg sm:text-xl lg:text-2xl mt-2 tracking-widest font-light"
                                style="text-shadow: 0 2px 4px rgba(0,0,0,0.8);">
                                Mỗi món chỉ có thể **Chọn** (1) hoặc **Không Chọn** (0)
                            </p>
                            <a href="#"
                                class="mt-8 inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition duration-300 transform hover:scale-105 shadow-xl uppercase tracking-wider">
                                Start Game
                            </a>
                        </div>
                    </div>
                </div>

                <div class="swiper-slide flex items-center justify-center"
                    style="background-image: url('/imgs/judge-bg.jpg'); background-size: cover; background-position: center;">
                    <div class="slide-overlay"></div>
                    <div class="flex flex-col items-center justify-center h-full w-full p-4">
                        <div
                            class="text-center p-6 sm:p-8 bg-black/50 rounded-xl shadow-2xl max-w-4xl w-full mx-auto backdrop-blur-sm text-white">
                            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight mb-2"
                                style="text-shadow: 0 4px 6px rgba(0,0,0,0.8);">
                                PHÂN TÍCH THUẬT TOÁN
                            </h1>
                            <p class="text-lg sm:text-xl lg:text-2xl mt-2 tracking-widest font-light"
                                style="text-shadow: 0 2px 4px rgba(0,0,0,0.8);">
                                Giải quyết bằng **Quy Hoạch Động** hiệu quả nhất
                            </p>
                            <a href="#"
                                class="mt-8 inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition duration-300 transform hover:scale-105 shadow-xl uppercase tracking-wider">
                                Start Game
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </section>
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="md:col-span-1">
                    <h2 class="text-4xl font-bold uppercase tracking-wide text-gray-900">
                        THE GAME
                        <span class="game-header-line"></span>
                    </h2>
                    <p class="mt-8 text-lg text-gray-700 leading-relaxed">
                        The cataclysm of Ragnarok has left Midgard decimated and Valhalla almost completely destroyed.
                        But
                        the surviving Gods are recruiting, building new, stronger armies in a bid to restore Valhalla to
                        its
                        former glory. In this mythical Norse universe comes **Frostkeep's brutal survival game, Rend**.
                        Players must join one of three factions and work as a team crafting weapons, building
                        fortresses,
                        and battling rival armies to earn victory points.
                    </p>
                    <p class="mt-4 text-lg text-gray-700 leading-relaxed">
                        The game features deep crafting and building systems combined with massive faction warfare, all
                        set
                        in a stunning, procedurally generated Norse world. Survive the elements, master the arcane, and
                        fight for your faction's dominance.
                    </p>
                </div>
                <div class="md:col-span-1 flex justify-center items-start">
                    <div class="bg-gray-900 shadow-xl border-4 border-gray-800 p-2 rounded-lg"
                        style="width: 450px; height: 300px;">
                        <div class="bg-black w-full h-full flex items-center justify-center text-white text-sm">
                            [Placeholder for Game Screenshot/Video]
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">

                <div class="lg:col-span-2 hidden lg:flex items-center justify-center relative min-h-[400px]">
                    <div
                        class="absolute inset-0 flex items-center justify-center bg-gray-200 text-gray-700 text-lg rounded-xl border-dashed border-2 border-gray-400 p-4">
                        [ Placeholder for image - Approx 40% width ]
                    </div>
                </div>

                <div class="lg:col-span-3">

                    <div>
                        <h2 class="text-5xl lg:text-6xl font-extrabold tracking-tighter text-gray-900 leading-tight">
                            Giải quyết mọi bài toán tối ưu với **Knapsack 0/1**
                        </h2>
                        <p class="mt-6 text-xl text-gray-600 leading-relaxed max-w-2xl">
                            Phân tích chi tiết thuật toán Quy Hoạch Động, trực quan hóa từng bước đi và tìm ra giải pháp
                            tối ưu.
                        </p>

                        <div class="mt-8 flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
                            <a href="#"
                                class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition duration-300 shadow-lg uppercase tracking-wider">
                                Bắt đầu Tối ưu
                            </a>
                            <a href="#"
                                class="inline-flex items-center justify-center px-8 py-3 border-2 border-gray-400 text-base font-medium rounded-lg text-gray-700 bg-transparent hover:bg-gray-100 transition duration-300 uppercase tracking-wider">
                                Xem tài liệu
                            </a>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 pt-16 mt-8 border-t border-gray-200">

                        <div
                            class="p-4 border-2 border-blue-400 rounded-xl bg-white shadow-lg flex flex-col space-y-4 transition duration-300 hover:shadow-xl hover:border-blue-500">
                            <div class="flex items-center justify-start">
                                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 10h18M3 14h18m-9-4v8m-9-4h18"></path>
                                </svg>
                            </div>
                            <p class="font-bold text-gray-900 text-sm uppercase">Bảng Quy Hoạch Động</p>
                            <p class="text-sm text-gray-600">Theo dõi trực quan việc điền bảng $K[i][w]$ từng bước.</p>
                            <a href="#" class="self-end text-blue-600 hover:text-blue-800 transition duration-150">
                                <svg class="w-6 h-6 transform hover:translate-x-1" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                        </div>

                        <div
                            class="p-4 border-2 border-blue-400 rounded-xl bg-white shadow-lg flex flex-col space-y-4 transition duration-300 hover:shadow-xl hover:border-blue-500">
                            <div class="flex items-center justify-start">
                                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            </div>
                            <p class="font-bold text-gray-900 text-sm uppercase">Truy Vết Giải Pháp</p>
                            <p class="text-sm text-gray-600">Hiển thị tập hợp các vật phẩm được chọn để đạt giá trị max.
                            </p>
                            <a href="#" class="self-end text-blue-600 hover:text-blue-800 transition duration-150">
                                <svg class="w-6 h-6 transform hover:translate-x-1" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                        </div>

                        <div
                            class="p-4 border-2 border-blue-400 rounded-xl bg-white shadow-lg flex flex-col space-y-4 transition duration-300 hover:shadow-xl hover:border-blue-500">
                            <div class="flex items-center justify-start">
                                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6m3 0V7a2 2 0 012-2h2a2 2 0 012 2v12m0 0h2m-2 0h2m-4 0h6m-4 0v-4a2 2 0 012-2h2a2 2 0 012 2v4">
                                    </path>
                                </svg>
                            </div>
                            <p class="font-bold text-gray-900 text-sm uppercase">Hiệu suất và $O(N \cdot W)$</p>
                            <p class="text-sm text-gray-600">Xem xét độ phức tạp thuật toán và tối ưu hóa bộ nhớ.</p>
                            <a href="#" class="self-end text-blue-600 hover:text-blue-800 transition duration-150">
                                <svg class="w-6 h-6 transform hover:translate-x-1" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        var swiper = new Swiper(".mySwiper", {
            // Tùy chọn chuyển slide tự động
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            // Hiệu ứng và lặp
            effect: "slide",
            loop: true,

            // Cấu hình Pagination (Chấm tròn)
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
                bulletActiveClass: 'bg-white',
                bulletClass: 'swiper-pagination-bullet !bg-gray-400 opacity-70 !w-3 !h-3 !mx-1'
            },

            // Cấu hình Navigation (Mũi tên)
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    </script>
</body>

</html>