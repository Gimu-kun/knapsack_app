        // ===============================================
        let timerInterval;
        const timerDisplay = document.getElementById('game-timer');
        const timerContainer = document.getElementById('timer-container');
        
        let deadlineTime = null; // Th·ªùi ƒëi·ªÉm h·∫øt h·∫°n (UTC) ƒë∆∞·ª£c Server tr·∫£ v·ªÅ

        // H√†m ƒë·ªãnh d·∫°ng th·ªùi gian (MM:SS)
        function formatTime(totalSeconds) {
            if (totalSeconds < 0) return "00:00";
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = totalSeconds % 60;
            return `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        // H√†m x·ª≠ l√Ω khi h·∫øt th·ªùi gian
        function challengeFailedByTime() {
            gameActive = false;
            // D·ª´ng b·ªô ƒë·∫øm
            if (timerInterval) clearInterval(timerInterval);
            
            // V√¥ hi·ªáu h√≥a input v√† drag/drop
            dpBoardBody.querySelectorAll('.dp-input').forEach(input => input.disabled = true);
            itemsContainer.querySelectorAll('.drag-item').forEach(item => item.setAttribute('draggable', 'false'));
            
            // C·∫≠p nh·∫≠t giao di·ªán
            timerDisplay.textContent = formatTime(0);
            timerContainer.classList.remove('bg-red-100', 'animate-pulse');
            timerContainer.classList.add('bg-gray-600', 'text-white');
            
            alert(`‚åõ TH·ª¨ TH√ÅCH TH·∫§T B·∫†I! ƒê√£ h·∫øt th·ªùi gian quy ƒë·ªãnh. Vui l√≤ng th·ª≠ l·∫°i!`);
        }

        // H√†m b·∫Øt ƒë·∫ßu ƒë·∫øm ng∆∞·ª£c D·ª∞A TR√äN SERVER DEADLINE
        function startTimerWithDeadline(deadlineUtc) {
            // Chuy·ªÉn chu·ªói ISO 8601 t·ª´ Server th√†nh ƒë·ªëi t∆∞·ª£ng Date
            deadlineTime = new Date(deadlineUtc);
            
            if (timerInterval) {
                clearInterval(timerInterval);
            }
            
            timerInterval = setInterval(() => {
                const nowUtc = new Date();
                // T√≠nh to√°n th·ªùi gian c√≤n l·∫°i (milliseconds)
                const timeRemainingMs = deadlineTime.getTime() - nowUtc.getTime();
                // Chuy·ªÉn sang gi√¢y (l√†m tr√≤n l√™n ƒë·ªÉ ƒë·∫£m b·∫£o ƒë·∫øm h·∫øt gi√¢y cu·ªëi c√πng)
                let timeRemainingSeconds = Math.max(0, Math.ceil(timeRemainingMs / 1000)); 

                if (timeRemainingSeconds <= 0) {
                    clearInterval(timerInterval);
                    timerDisplay.textContent = formatTime(0);
                    challengeFailedByTime();
                    return;
                }

                timerDisplay.textContent = formatTime(timeRemainingSeconds);
                
                // C·∫£nh b√°o khi c√≤n 60 gi√¢y cu·ªëi c√πng
                if (timeRemainingSeconds <= 60 && timeRemainingSeconds > 0) {
                    timerContainer.classList.remove('bg-green-100', 'text-green-800');
                    timerContainer.classList.add('bg-red-100', 'animate-pulse', 'text-red-800');
                } else if (timeRemainingSeconds > 60) {
