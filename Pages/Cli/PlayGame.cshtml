        if (startGameBtn && startScreen) {
            startGameBtn.addEventListener('click', async () => {
                // T·∫Øt n√∫t ƒë·ªÉ tr√°nh click k√©p v√† cung c·∫•p ph·∫£n h·ªìi
                startGameBtn.disabled = true; 
