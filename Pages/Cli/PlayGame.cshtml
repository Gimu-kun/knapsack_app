                    }
                    
                    // ‚úÖ THAY TH·∫æ dataTransfer: L∆∞u ID v√†o bi·∫øn to√†n c·ª•c
                    DRAGGED_ITEM_ID = item.dataset.id;
                    
                    // V·∫´n set minimal dataTransfer ƒë·ªÉ k√≠ch ho·∫°t c∆° ch·∫ø k√©o th·∫£ c·ªßa tr√¨nh duy·ªát
                    e.dataTransfer.setData('text/plain', 'data'); 
                    
                    item.style.opacity = '0.5';
                    item.classList.add('dragging');
                });

                item.addEventListener('dragend', (e) => { 
                    // ‚úÖ THAY TH·∫æ dataTransfer: X√≥a ID kh·ªèi bi·∫øn to√†n c·ª•c
                    DRAGGED_ITEM_ID = null;
                    item.style.opacity = '1';
