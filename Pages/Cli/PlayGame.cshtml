        function handleDropKnapsack(itemId) {
            if (!gameActive || !itemId) {
                knapsack.classList.remove('border-blue-500', 'bg-blue-50', 'border-dashed');
                return; 
            }

            knapsack.classList.remove('border-blue-500', 'bg-blue-50', 'border-dashed');

            // 2. T√¨m l·∫°i ph·∫ßn t·ª≠ g·ªëc ƒë·ªÉ l·∫•y d·ªØ li·ªáu
            const draggedItem = itemsContainer.querySelector(`.drag-item[data-id="${itemId}"]`);
            
            // Ki·ªÉm tra xem v·∫≠t ph·∫©m c√≥ t·ªìn t·∫°i v√† c√≤n trong khung ch·ªçn kh√¥ng
            if (!draggedItem || draggedItem.parentNode !== itemsContainer) {
                console.warn(`V·∫≠t ph·∫©m ID ${itemId} kh√¥ng c√≤n kh·∫£ d·ª•ng ƒë·ªÉ k√©o.`);
                return; 
            }
            
            // Tr√≠ch xu·∫•t d·ªØ li·ªáu t·ª´ data-attributes
            const data = {
                id: itemId,
                name: draggedItem.dataset.name,
                value: parseInt(draggedItem.dataset.value),
                weight: parseInt(draggedItem.dataset.weight),
            };
            
            // 3. Logic Knapsack
            if (totalWeight + data.weight > maxCapacity) {
                alert(`‚ö†Ô∏è Kh√¥ng th·ªÉ th√™m ${data.weight} kg. T√∫i ch·ªâ c√≤n tr·ªëng ${maxCapacity - totalWeight} kg.`);
                return; 
            }
                
            // 4. C·∫≠p nh·∫≠t UI
            const clone = draggedItem.cloneNode(true);
            clone.setAttribute('draggable', 'false');
            clone.setAttribute('data-rm-id', itemId);
            clone.classList.remove('hover:ring-2', 'hover:ring-blue-300', 'cursor-grab');
            clone.classList.add('knapsack-item', 'relative', 'bg-blue-100', 'shadow-md', 'ring-2', 'ring-blue-400');
            console.log("Th√™m v·∫≠t ph·∫©m v√†o knapsack:", clone);
            knapsack.appendChild(clone);

            knapsack.querySelector('.placeholder-content')?.remove();
            draggedItem.remove(); 

            totalWeight += data.weight;
            totalValue += data.value;
            updateTotals();

            createRemoveButton(clone, itemId, draggedItem.dataset.name, parseInt(draggedItem.dataset.value), parseInt(draggedItem.dataset.weight)); 
        }

        function removeFromKnapsack(knapsackItemElement, itemId, itemName, itemValue, itemWeight) { 
            // 1. C·∫≠p nh·∫≠t UI
            const el = document.querySelector(`[data-rm-id="${itemId}"]`);
