                    timerContainer.classList.remove('bg-gray-200', 'text-red-800', 'bg-red-100', 'animate-pulse');
                    timerContainer.classList.add('bg-green-100', 'text-green-800');
                }
                
            }, 1000); // C·∫≠p nh·∫≠t m·ªói gi√¢y
        }
        
