                    }
                    e.dataTransfer.setData('text/plain', JSON.stringify({
                        id: item.dataset.id,
                        value: parseInt(item.dataset.value),
                        weight: parseInt(item.dataset.weight),
                    }));
                    item.style.opacity = '0.5';
                    item.classList.add('dragging');
