        // --- Drag & Drop Knapsack Logic ---
        
        // H√ÄM KI·ªÇM TRA ƒê·∫†T T·ªêI ∆ØU
        function checkOptimalValueAndEndGame() {
            if (totalValue === OPTIMAL_VALUE && totalWeight <= maxCapacity) {
                // G·ªåI HUB ƒê·ªÇ K·∫æT TH√öC GAME CHO C·∫¢ PH√íNG
                if(isMultiplayer && hubConnection) {
