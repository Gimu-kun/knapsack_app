<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5/themes.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin_layout.css" asp-append-version="true" />
</head>

<body class="bg-gray-50 antialiased">
    <partial name="_AdminHeader" />
    <div class="flex pt-16">
        <partial name="_Sidebar" />
        <main id="main-content" class="flex-grow w-full p-4 md:p-8 content-expanded">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const toggleButton = document.getElementById('sidebar-toggle');
        const sidebarItems = document.querySelectorAll('.sidebar-item');
        
        const activeClasses = ['bg-indigo-600', 'font-semibold', 'shadow-md', 'text-white'];
        const inactiveClasses = ['text-gray-300', 'hover:bg-gray-700'];
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            const toggleButton = document.getElementById('sidebar-toggle');

            let isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';

            function applyState(collapsed) {
                if (collapsed) {
                    sidebar.classList.remove('sidebar-expanded');
                    sidebar.classList.add('sidebar-collapsed');

                    mainContent.classList.remove('content-expanded');
                    mainContent.classList.add('content-collapsed');
                } else {
                    sidebar.classList.remove('sidebar-collapsed');
                    sidebar.classList.add('sidebar-expanded');

                    mainContent.classList.remove('content-collapsed');
                    mainContent.classList.add('content-expanded');
                }
                localStorage.setItem('sidebarCollapsed', collapsed);
            }

            applyState(isCollapsed);

            toggleButton.addEventListener('click', function () {
                isCollapsed = !isCollapsed;
                applyState(isCollapsed);
            });
        });

        function removeActiveClass(item) {
            item.classList.remove(...activeClasses);
            item.classList.add(...inactiveClasses);
            item.classList.remove('text-white');
            item.classList.add('text-gray-300'); 
        }

        function applyActiveClass(item) {
            sidebarItems.forEach(i => removeActiveClass(i));
            item.classList.remove(...inactiveClasses);
            item.classList.add(...activeClasses);
            item.classList.remove('text-gray-300');
            item.classList.add('text-white'); 
        }

        function setActiveItem() {
            const currentPath = window.location.pathname.toLowerCase();
            console.log("Current Path:", sidebarItems);
            sidebarItems.forEach(item => {
                if (item.tagName === 'A') {
                    const itemPath = item.getAttribute('href').toLowerCase();
                    if (currentPath === itemPath) {
                        applyActiveClass(item);
                    } else {
                        removeActiveClass(item);
                    }
                } else if (item.tagName === 'BUTTON' && item.closest('form[asp-page-handler="Logout"]')) {
                    removeActiveClass(item);
                    item.classList.add('text-red-400', 'hover:bg-gray-700');
                }
            });
        }
        setActiveItem();
    </script>
</body>

</html>